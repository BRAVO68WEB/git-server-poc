# Git Server Environment Variables
# Copy this file to .env and update the values

# Server Configuration
GITSERVER_SERVER_HOST=0.0.0.0
GITSERVER_SERVER_PORT=8080
GITSERVER_SERVER_MODE=release
GITSERVER_SERVER_HOSTED_URL=https://git.example.com
GITSERVER_FRONTEND_HOSTED_URL=https://example.com

# Database Configuration
GITSERVER_DATABASE_HOST=localhost
GITSERVER_DATABASE_PORT=5432
GITSERVER_DATABASE_USER=gitserver
GITSERVER_DB_PASSWORD=your_secure_password_here
GITSERVER_DATABASE_DBNAME=gitserver
GITSERVER_DATABASE_SSLMODE=disable

# Storage Configuration
GITSERVER_STORAGE_TYPE=filesystem
GITSERVER_STORAGE_BASE_PATH=./data/repos

# S3 Storage (if using S3)
# GITSERVER_STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# GITSERVER_STORAGE_S3_BUCKET=your-bucket-name
# GITSERVER_STORAGE_S3_REGION=us-east-1
# GITSERVER_STORAGE_S3_ENDPOINT=  # Optional: for S3-compatible services

# SSH Configuration
GITSERVER_SSH_ENABLED=true
GITSERVER_SSH_HOST=0.0.0.0
GITSERVER_SSH_PORT=2222
GITSERVER_SSH_HOST_KEY_PATH=./ssh_host_key
GITSERVER_SSH_HOSTED_URL=git@gitserver.dev:thunder/repo-name.git

# OPA Authorization (Optional)
GITSERVER_OPA_ENABLED=false
GITSERVER_OPA_URL=http://localhost:8181
GITSERVER_OPA_POLICY_PATH=/v1/data/gitserver/authz/allow

# Logging Configuration
GITSERVER_LOGGING_LEVEL=info
GITSERVER_LOGGING_OUTPUT_PATH=stdout
GITSERVER_LOGGING_FORMAT=json
