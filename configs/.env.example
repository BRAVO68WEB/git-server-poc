# Stasis Server Environment Variables
# Copy this file to .env and update the values
#
CONFIG_PATH=configs/config.yaml

# Server Configuration
STASIS_SERVER_HOST=0.0.0.0
STASIS_SERVER_PORT=8080
STASIS_SERVER_MODE=release # values: release, debug, test
STASIS_SERVER_HOSTED_URL=https://git.example.com
STASIS_FRONTEND_HOSTED_URL=https://example.com

# Database Configuration
STASIS_DATABASE_HOST=localhost
STASIS_DATABASE_PORT=5432
STASIS_DATABASE_USER=STASIS
STASIS_DB_PASSWORD=your_secure_password_here
STASIS_DATABASE_DBNAME=STASIS
STASIS_DATABASE_SSLMODE=disable

# Storage Configuration
STASIS_STORAGE_TYPE=filesystem # values: filesystem,
STASIS_STORAGE_BASE_PATH=./data/repos

# S3 Storage (if using S3)
# STASIS_STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# STASIS_STORAGE_S3_BUCKET=your-bucket-name
# STASIS_STORAGE_S3_REGION=us-east-1
# STASIS_STORAGE_S3_ENDPOINT=  # Optional: for S3-compatible services

# SSH Configuration
STASIS_SSH_ENABLED=true
STASIS_SSH_HOST=0.0.0.0
STASIS_SSH_PORT=2222
STASIS_SSH_HOST_KEY_PATH=./ssh_host_key
STASIS_SSH_HOST_NAME=ssh.example.dev

# Logging Configuration
STASIS_LOGGING_LEVEL=info
STASIS_LOGGING_OUTPUT_PATH=stdout
STASIS_LOGGING_FORMAT=json
